{
  "name": "nodejs-typescript",
  "version": "1.0.0",
  "description": "this is template repo for nodejs typescript",
  "main": "dist/index.js",
  "scripts": {
    "tsc": "tsc",
    "tsc-w": "tsc -w",
    "start": "node dist/index.js",
    "build": "esbuild --bundle src/index.ts --outdir=dist --platform=node --target=ESNext --minify",
    "dev": "env-cmd -f .env nodemon --watch src src/index.ts"
  },
  "dependencies": {
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "rotating-file-stream": "^3.2.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "repository": "https://github.com/DeveloperRejaul/nodejs-typescript.git",
  "author": "Rezaul karim",
  "license": "ISC",
  "private": true
}
